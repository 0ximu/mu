{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MU",
  "scopeName": "source.mu",
  "fileTypes": ["mu"],
  "patterns": [
    { "include": "#file-header" },
    { "include": "#section-header" },
    { "include": "#module-dependency-line" },
    { "include": "#module-declaration" },
    { "include": "#class-definition" },
    { "include": "#function-definition" },
    { "include": "#decorator-attrs" },
    { "include": "#decorator-deps" },
    { "include": "#annotation-line" },
    { "include": "#conditional-line" },
    { "include": "#step-line" },
    { "include": "#import-line" },
    { "include": "#strings" },
    { "include": "#operators" },
    { "include": "#constants" }
  ],
  "repository": {
    "file-header": {
      "patterns": [
        {
          "name": "comment.block.documentation.mu",
          "match": "^(#)\\s*(MU)\\s+(v[\\d.]+)\\s*$",
          "captures": {
            "1": { "name": "punctuation.definition.comment.mu" },
            "2": { "name": "keyword.other.mu strong" },
            "3": { "name": "constant.numeric.version.mu" }
          }
        },
        {
          "name": "comment.line.metadata.mu",
          "match": "^(#)\\s*(generated|source|modules|classes|functions|files|compression)(:)\\s*(.*)$",
          "captures": {
            "1": { "name": "punctuation.definition.comment.mu" },
            "2": { "name": "keyword.other.metadata-key.mu" },
            "3": { "name": "punctuation.separator.colon.mu" },
            "4": { "name": "string.unquoted.metadata-value.mu" }
          }
        }
      ]
    },
    "section-header": {
      "patterns": [
        {
          "name": "markup.heading.section.mu",
          "match": "^(##)\\s+(.*)$",
          "captures": {
            "1": { "name": "punctuation.definition.heading.mu" },
            "2": { "name": "entity.name.section.mu" }
          }
        }
      ]
    },
    "module-dependency-line": {
      "patterns": [
        {
          "name": "meta.module-dependency.mu",
          "match": "^(!)(\\w+)\\s*(->)\\s*(.+)$",
          "captures": {
            "1": { "name": "punctuation.definition.module.mu keyword.operator.sigil.mu" },
            "2": { "name": "entity.name.namespace.mu" },
            "3": { "name": "keyword.operator.arrow.mu" },
            "4": {
              "name": "meta.dependency-list.mu",
              "patterns": [
                {
                  "name": "entity.name.import.mu",
                  "match": "[\\w.]+"
                },
                {
                  "name": "punctuation.separator.comma.mu",
                  "match": ","
                }
              ]
            }
          }
        }
      ]
    },
    "module-declaration": {
      "patterns": [
        {
          "name": "meta.module.mu",
          "match": "^(!)(module)\\s+(\\w+)\\s*$",
          "captures": {
            "1": { "name": "punctuation.definition.module.mu keyword.operator.sigil.module.mu" },
            "2": { "name": "keyword.declaration.module.mu" },
            "3": { "name": "entity.name.namespace.mu" }
          }
        },
        {
          "name": "meta.module.unicode.mu",
          "match": "^(§)(\\w+(?:\\.\\w+)*)\\s*$",
          "captures": {
            "1": { "name": "punctuation.definition.module.mu keyword.operator.sigil.module.mu" },
            "2": { "name": "entity.name.namespace.mu" }
          }
        }
      ]
    },
    "class-definition": {
      "patterns": [
        {
          "name": "meta.class.mu",
          "match": "^\\s*(\\$|τ)(\\w+)(?:\\s*(<)\\s*(\\w+))?\\s*$",
          "captures": {
            "1": { "name": "punctuation.definition.class.mu keyword.operator.sigil.class.mu" },
            "2": { "name": "entity.name.class.mu" },
            "3": { "name": "keyword.operator.inheritance.mu" },
            "4": { "name": "entity.other.inherited-class.mu" }
          }
        }
      ]
    },
    "function-definition": {
      "patterns": [
        {
          "name": "meta.function.async.mu",
          "match": "^\\s*(#|λ)(async)\\s+(\\w+)(\\()([^)]*)(\\))(?:\\s*(->|→)\\s*(.+))?\\s*$",
          "captures": {
            "1": { "name": "punctuation.definition.function.mu keyword.operator.sigil.function.mu" },
            "2": { "name": "storage.modifier.async.mu" },
            "3": { "name": "entity.name.function.mu" },
            "4": { "name": "punctuation.definition.parameters.begin.mu" },
            "5": {
              "name": "meta.parameters.mu",
              "patterns": [{ "include": "#parameter-list" }]
            },
            "6": { "name": "punctuation.definition.parameters.end.mu" },
            "7": { "name": "keyword.operator.return-type.mu" },
            "8": {
              "name": "meta.return-type.mu",
              "patterns": [{ "include": "#type-annotation" }]
            }
          }
        },
        {
          "name": "meta.function.mu",
          "match": "^\\s*(#|λ)(\\w+)(\\()([^)]*)(\\))(?:\\s*(->|→)\\s*(.+))?\\s*$",
          "captures": {
            "1": { "name": "punctuation.definition.function.mu keyword.operator.sigil.function.mu" },
            "2": { "name": "entity.name.function.mu" },
            "3": { "name": "punctuation.definition.parameters.begin.mu" },
            "4": {
              "name": "meta.parameters.mu",
              "patterns": [{ "include": "#parameter-list" }]
            },
            "5": { "name": "punctuation.definition.parameters.end.mu" },
            "6": { "name": "keyword.operator.return-type.mu" },
            "7": {
              "name": "meta.return-type.mu",
              "patterns": [{ "include": "#type-annotation" }]
            }
          }
        },
        {
          "name": "meta.function.simple.mu",
          "match": "^\\s*(#|λ)(\\w+)(?:\\s*(->|→)\\s*(.+))?\\s*$",
          "captures": {
            "1": { "name": "punctuation.definition.function.mu keyword.operator.sigil.function.mu" },
            "2": { "name": "entity.name.function.mu" },
            "3": { "name": "keyword.operator.return-type.mu" },
            "4": {
              "name": "meta.return-type.mu",
              "patterns": [{ "include": "#type-annotation" }]
            }
          }
        }
      ]
    },
    "parameter-list": {
      "patterns": [
        {
          "name": "meta.parameter.mu",
          "match": "(\\w+)(:)\\s*([^,]+)",
          "captures": {
            "1": { "name": "variable.parameter.mu" },
            "2": { "name": "punctuation.separator.colon.mu" },
            "3": {
              "name": "meta.type.mu",
              "patterns": [{ "include": "#type-annotation" }]
            }
          }
        },
        {
          "name": "variable.parameter.mu",
          "match": "\\w+"
        },
        {
          "name": "punctuation.separator.comma.mu",
          "match": ","
        }
      ]
    },
    "type-annotation": {
      "patterns": [
        {
          "name": "storage.type.generic.mu",
          "match": "(Optional|List|Dict|Set|Tuple|Union|Callable)(\\[)([^\\]]+)(\\])",
          "captures": {
            "1": { "name": "support.type.generic.mu" },
            "2": { "name": "punctuation.definition.generic.begin.mu" },
            "3": {
              "name": "meta.generic-arguments.mu",
              "patterns": [{ "include": "#type-annotation" }]
            },
            "4": { "name": "punctuation.definition.generic.end.mu" }
          }
        },
        {
          "name": "support.type.primitive.mu",
          "match": "\\b(str|int|float|bool|bytes|None|void|any)\\b"
        },
        {
          "name": "entity.name.type.mu",
          "match": "\\b[A-Z]\\w*\\b"
        }
      ]
    },
    "decorator-attrs": {
      "patterns": [
        {
          "name": "meta.decorator.attrs.mu",
          "match": "^\\s*(@)(attrs)\\s*(\\[)([^\\]]*)(\\])",
          "captures": {
            "1": { "name": "punctuation.definition.decorator.mu" },
            "2": { "name": "entity.name.decorator.mu keyword.other.attrs.mu" },
            "3": { "name": "punctuation.definition.array.begin.mu" },
            "4": {
              "name": "meta.attribute-list.mu",
              "patterns": [
                {
                  "name": "variable.other.property.mu",
                  "match": "\\w+"
                },
                {
                  "name": "punctuation.separator.comma.mu",
                  "match": ","
                }
              ]
            },
            "5": { "name": "punctuation.definition.array.end.mu" }
          }
        }
      ]
    },
    "decorator-deps": {
      "patterns": [
        {
          "name": "meta.decorator.deps.mu",
          "match": "^\\s*(@)(deps)\\s*(\\[)([^\\]]*)(\\])",
          "captures": {
            "1": { "name": "punctuation.definition.decorator.mu" },
            "2": { "name": "entity.name.decorator.mu keyword.other.deps.mu" },
            "3": { "name": "punctuation.definition.array.begin.mu" },
            "4": {
              "name": "meta.dependency-list.mu",
              "patterns": [
                {
                  "name": "entity.name.import.mu",
                  "match": "[\\w$]+"
                },
                {
                  "name": "punctuation.separator.comma.mu",
                  "match": ","
                }
              ]
            },
            "5": { "name": "punctuation.definition.array.end.mu" }
          }
        }
      ]
    },
    "annotation-line": {
      "patterns": [
        {
          "name": "meta.annotation.guard.mu",
          "match": "^\\s*(::|∅)\\s*(guard)(:)\\s*(.*)$",
          "captures": {
            "1": { "name": "punctuation.definition.annotation.mu keyword.operator.annotation.mu" },
            "2": { "name": "keyword.control.guard.mu" },
            "3": { "name": "punctuation.separator.colon.mu" },
            "4": { "name": "string.unquoted.guard-condition.mu" }
          }
        },
        {
          "name": "meta.annotation.transaction.mu",
          "match": "^\\s*(::|∅)\\s*(transaction)(:)\\s*(.*)$",
          "captures": {
            "1": { "name": "punctuation.definition.annotation.mu keyword.operator.annotation.mu" },
            "2": { "name": "keyword.control.transaction.mu" },
            "3": { "name": "punctuation.separator.colon.mu" },
            "4": { "name": "constant.language.transaction-type.mu" }
          }
        },
        {
          "name": "meta.annotation.external.mu",
          "match": "^\\s*(::|∅)\\s*(external)(:)\\s*(.*)$",
          "captures": {
            "1": { "name": "punctuation.definition.annotation.mu keyword.operator.annotation.mu" },
            "2": { "name": "keyword.control.external.mu" },
            "3": { "name": "punctuation.separator.colon.mu" },
            "4": { "name": "entity.name.function.external.mu" }
          }
        },
        {
          "name": "meta.annotation.complexity.mu",
          "match": "^\\s*(::|∅)\\s*(complexity)(:)(\\d+)\\s*$",
          "captures": {
            "1": { "name": "punctuation.definition.annotation.mu keyword.operator.annotation.mu" },
            "2": { "name": "keyword.other.complexity.mu" },
            "3": { "name": "punctuation.separator.colon.mu" },
            "4": { "name": "constant.numeric.complexity.mu" }
          }
        },
        {
          "name": "meta.annotation.note.mu",
          "match": "^\\s*(::|∅)\\s*(NOTE)(:)\\s*(.*)$",
          "captures": {
            "1": { "name": "punctuation.definition.annotation.mu keyword.operator.annotation.mu" },
            "2": { "name": "keyword.other.note.mu" },
            "3": { "name": "punctuation.separator.colon.mu" },
            "4": { "name": "comment.line.note-text.mu" }
          }
        },
        {
          "name": "meta.annotation.generic.mu",
          "match": "^\\s*(::|∅)\\s*(\\w+)(:)\\s*(.*)$",
          "captures": {
            "1": { "name": "punctuation.definition.annotation.mu keyword.operator.annotation.mu" },
            "2": { "name": "keyword.other.annotation-key.mu" },
            "3": { "name": "punctuation.separator.colon.mu" },
            "4": { "name": "string.unquoted.annotation-value.mu" }
          }
        }
      ]
    },
    "conditional-line": {
      "patterns": [
        {
          "name": "meta.conditional.mu",
          "match": "^\\s*(\\?)\\s*(.+?)\\s*(->|→)\\s*(.+)$",
          "captures": {
            "1": { "name": "keyword.control.conditional.mu" },
            "2": { "name": "variable.other.condition.mu" },
            "3": { "name": "keyword.operator.arrow.mu" },
            "4": {
              "name": "meta.action.mu",
              "patterns": [
                {
                  "name": "entity.name.function.action.mu",
                  "match": "\\b(send_email|send_push|send_sms|raise|return|err)\\b"
                },
                { "include": "#strings" }
              ]
            }
          }
        }
      ]
    },
    "step-line": {
      "patterns": [
        {
          "name": "meta.step.mu",
          "match": "^\\s*(\\d+)(\\.)\\s+(.*)$",
          "captures": {
            "1": { "name": "constant.numeric.step-number.mu" },
            "2": { "name": "punctuation.definition.step.mu" },
            "3": { "name": "string.unquoted.step-description.mu" }
          }
        }
      ]
    },
    "import-line": {
      "patterns": [
        {
          "name": "meta.import.mu",
          "match": "(⟹)(\\?)?\\s*(\\w+(?:\\.\\w+)*)",
          "captures": {
            "1": { "name": "keyword.control.import.mu" },
            "2": { "name": "keyword.operator.optional.mu" },
            "3": { "name": "entity.name.import.mu" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mu",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.mu" } },
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.mu" } },
          "patterns": [
            {
              "name": "constant.character.escape.mu",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.mu",
          "begin": "'",
          "end": "'",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.mu" } },
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.mu" } }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.mutation.mu",
          "match": "=>|⟹"
        },
        {
          "name": "keyword.operator.pipe.mu",
          "match": "\\|"
        },
        {
          "name": "keyword.operator.iteration.mu",
          "match": "~"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.mu",
          "match": "\\b(None|True|False|null|true|false)\\b"
        },
        {
          "name": "constant.other.enum-member.mu",
          "match": "\\b[A-Z][A-Z_0-9]+\\b"
        },
        {
          "name": "constant.numeric.mu",
          "match": "\\b\\d+(\\.\\d+)?%?\\b"
        }
      ]
    }
  }
}
