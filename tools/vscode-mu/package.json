{
  "name": "vscode-mu",
  "displayName": "MU - Semantic Compression",
  "description": "Syntax highlighting and tooling for MU (Machine Understanding) semantic compression format",
  "version": "0.3.0",
  "publisher": "dominaite",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dominaite/mu"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Themes",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "mu",
    "semantic compression",
    "llm",
    "code analysis",
    "machine understanding"
  ],
  "activationEvents": [
    "workspaceContains:.mubase",
    "onLanguage:mu",
    "onCommand:mu.compress",
    "onCommand:mu.preview",
    "onCommand:mu.diff"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mu",
        "aliases": ["MU", "Machine Understanding"],
        "extensions": [".mu"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mu",
        "scopeName": "source.mu",
        "path": "./syntaxes/mu.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "MU Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/mu-dark.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mu-explorer",
          "title": "MU",
          "icon": "media/icons/mu.svg"
        }
      ]
    },
    "views": {
      "mu-explorer": [
        {
          "id": "mu.modules",
          "name": "Modules"
        },
        {
          "id": "mu.classes",
          "name": "Classes"
        },
        {
          "id": "mu.functions",
          "name": "Functions"
        },
        {
          "id": "mu.hotspots",
          "name": "Hotspots"
        }
      ]
    },
    "commands": [
      {
        "command": "mu.compress",
        "title": "MU: Compress Directory",
        "category": "MU"
      },
      {
        "command": "mu.compressFile",
        "title": "MU: Compress Current File's Directory",
        "category": "MU"
      },
      {
        "command": "mu.compressWorkspace",
        "title": "MU: Compress Workspace",
        "category": "MU"
      },
      {
        "command": "mu.preview",
        "title": "MU: Preview Output",
        "category": "MU"
      },
      {
        "command": "mu.diff",
        "title": "MU: Semantic Diff Between Git Refs",
        "category": "MU"
      },
      {
        "command": "mu.query",
        "title": "MU: Run MUQL Query",
        "category": "MU"
      },
      {
        "command": "mu.getContext",
        "title": "MU: Get Smart Context",
        "category": "MU"
      },
      {
        "command": "mu.showDependencies",
        "title": "MU: Show Dependencies",
        "category": "MU"
      },
      {
        "command": "mu.showDependents",
        "title": "MU: Show Dependents",
        "category": "MU"
      },
      {
        "command": "mu.findPath",
        "title": "MU: Find Path Between Nodes",
        "category": "MU"
      },
      {
        "command": "mu.refresh",
        "title": "MU: Refresh Explorer",
        "category": "MU",
        "icon": "$(refresh)"
      },
      {
        "command": "mu.openVisualization",
        "title": "MU: Open Visualization",
        "category": "MU"
      },
      {
        "command": "mu.toggleBadges",
        "title": "MU: Toggle Complexity Badges",
        "category": "MU"
      },
      {
        "command": "mu.refreshDiagnostics",
        "title": "MU: Refresh Contract Diagnostics",
        "category": "MU"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mu.compress",
          "when": "explorerResourceIsFolder",
          "group": "mu@1"
        }
      ],
      "editor/context": [
        {
          "command": "mu.preview",
          "when": "editorLangId != mu",
          "group": "mu@1"
        },
        {
          "command": "mu.showDependencies",
          "when": "editorTextFocus",
          "group": "mu@2"
        },
        {
          "command": "mu.showDependents",
          "when": "editorTextFocus",
          "group": "mu@2"
        }
      ],
      "view/title": [
        {
          "command": "mu.refresh",
          "when": "view =~ /^mu\\./",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "MU",
      "properties": {
        "mu.executablePath": {
          "type": "string",
          "default": "mu",
          "description": "Path to the mu CLI executable"
        },
        "mu.defaultFormat": {
          "type": "string",
          "enum": ["mu", "json", "markdown"],
          "default": "mu",
          "description": "Default output format for compression"
        },
        "mu.autoPreview": {
          "type": "boolean",
          "default": false,
          "description": "Automatically show preview pane when compressing"
        },
        "mu.daemonUrl": {
          "type": "string",
          "default": "http://localhost:8765",
          "description": "URL of the MU daemon HTTP API"
        },
        "mu.complexity.warningThreshold": {
          "type": "number",
          "default": 200,
          "description": "Complexity score threshold for warning badges"
        },
        "mu.complexity.errorThreshold": {
          "type": "number",
          "default": 500,
          "description": "Complexity score threshold for error badges"
        },
        "mu.codeLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show dependency CodeLens above functions and classes"
        },
        "mu.badges.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show complexity badges at end of function lines"
        },
        "mu.context.maxTokens": {
          "type": "number",
          "default": 8000,
          "description": "Maximum tokens for smart context extraction"
        }
      }
    },
    "keybindings": [
      {
        "command": "mu.preview",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus"
      },
      {
        "command": "mu.query",
        "key": "ctrl+shift+q",
        "mac": "cmd+shift+q",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/sinon": "^17.0.2",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.55.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "ws": "^8.16.0"
  }
}
